{
	"name": "Codespace for the Next.js Series",
	"image":"mcr.microsoft.com/devcontainers/universal:2",
	// TODO Figure out a way to change the Welcome terminal text
	// "postCreateCommand": "sudo cp .devcontainer/welcome.txt /workspaces/.codespaces/shared/first-run-notice.txt",
	"customizations": {
		"vscode": {
			"extensions": [
				// Key Extension Pack Required
				"gaurav-gosain.GDSC-nextjs",
				// Miscellaneous Extensions
				"VisualStudioExptTeam.vscodeintellicode",
				"VisualStudioExptTeam.intellicode-api-usage-examples",
				"ms-vscode-remote.remote-containers",
				// Markdown
				"yzhang.markdown-all-in-one",
				"bierner.github-markdown-preview",
				// Icon Pack
				"vscode-icons-team.vscode-icons"
			]
		},
		"codespaces": {
			"openFiles": ["README.md"]
		}
	},
	"postCreateCommand": "sudo cp .devcontainer/welcome.txt /usr/local/etc/vscode-dev-containers/first-run-notice.txt"
}